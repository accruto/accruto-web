<div class="container">
	<div class="stylesheet-modal-container">
		<div class="modal modal-apply">
			<%= simple_form_for :user do |f| %>
			  <div class="modal-header">
			    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			    <h3>You are applying for</h3>
			  </div>
			  <div class="modal-body">
			    <p>UI DESIGNER</p>
			    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
		    	<%= f.input :full_name, label: 'Full Name' %>
		    	<%= f.input :cv, label: 'Upload your CV', as: :file %>
		    	<%= f.input :letter, label: 'Got a cover letter?', as: :file %>
		    	<%= f.input :description, label: 'or paste it here' %>
			  </div>
			  <div class="modal-footer">
			    <%= f.submit "SUBMIT APPLICATION", class: "btn btn-primary" %>
			  </div>
		  <% end %>
		</div>
	</div>
</div>