<div class="container">
	<div class="stylesheet-modal-container">
		<div class="modal modal-apply">
			<%= simple_form_for :user do |f| %>
			  <div class="modal-header">
			    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			    <h3>You are applying for</h3>
			  </div>
			  
			    <div class="short-job-apply">
			    	<h4>UI Designer</h4>
			    	<p>ABC Engineering â€” South Bank, QLD</p>
			    </div>
			<div class="modal-body">
			    	<%= f.input :full_name, placeholder: 'e.g. John Smith', label: 'Full Name' %>
			    	<%= f.input :cv, label: 'Upload your CV', as: :file %>
			    	<%= f.input :letter, label: 'Got a cover letter?', as: :file %>
			    	<%= f.input :description, as: :text, :input_html => { :rows => 4}, placeholder: 'Paste your cover letter text in here', label: 'Or paste it here' %>
			  </div>
			  <div class="modal-footer">
			    <%= f.submit "Submit Application", class: "btn btn-primary btn-apply-job" %>
			  </div>
		  <% end %>
		</div>
	</div>
</div>