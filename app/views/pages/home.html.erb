<div class="main-landing">
	<div class="container">
		<div class="align-center">
			<%= image_tag "/assets/logo-accruto-main.png" %>
			<h1>Join our 600,000 customers and kick-start your new career</h1>
		</div>
	</div>
</div>

<div class="main-search">
	<div class="container">
		<%= simple_form_for @job, class: 'form-inline' do |f| %>
			<div class="row-fluid">
				<div class="span4">
					<label>Job title?</label><br>
					<input type="text" />
				</div>
				<div class="span4">
					<label>Where?</label><br>
					<input type="text" />
				</div>
				<div class="span4">
					<%= f.button :submit, "Search", class: 'btn-primary btn-large' %>
				</div>
			</div>
		<% end %>
	</div>
</div>

<div class="container">
	<div class="row job-ticker">
		<div class="align-center">
			<h3>There are currently<span class=""> 234,756 </span>Australian Jobs posted on Accruto
			</h3>
		</div>
	</div>
	<div class="browse-jobs">
		<div class="row hidden-phone">
			<div class="span6">
				<h4 class="sub-heading">Browse Categories</h4>
			</div>
		</div>
		<div class="row hidden-phone">
			<% @categories.in_groups(4).each do |group| %>
				<div class="span3">
					<ul class="category-list">
						<% group.each do |category| %>
							<li><a href="#"><%= category.name %></a></li>
						<% end %>
					</ul>
				</div>
			<% end %>
		</div>
	</div>

	<hr>
	<div class="customers">
