<% title "Sign In" %>
<div class="content static-pages">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<h2>Sign in to Accruto</h2>
				<div class="sign-up-form">
					<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				    <%= f.input :email, :required => false, :autofocus => true %>
				    <%= f.input :password, :required => false %>
				    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
			    	<%= f.button :submit, "Sign in", :class=>"btn btn-success", disable_with: "Signing in..." %>
					<% end %>
					<br>
					<%= render "devise/shared/links" %>
					<hr>
					<p class="small-note">Thank you for signing up with Accruto. We are the biggest blue-collared and skilled trade job portal in Australia. Good luck on searching for your perfect job!</p>
				</div>
			</div>
		</div>
	</div>
</div>