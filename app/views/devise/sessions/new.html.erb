<div class="page-header-post">
	<div class="container title-sign">
		<h1>Hello again! Sign on in.</h1>
	</div>
</div>
<div class="container sign-in">
	<div class="span4 hidden-phone">&nbsp;</div>
		<div class="span4 minor">
			<div class="sign-up-form">
				<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

				 <div class="form-inputs">
				    <%= f.input :email, :required => false, :autofocus => true %>
				    <%= f.input :password, :required => false %>
				    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	  			</div>

				<div class="form-actions">
			    		<%= f.button :submit, "Sign in", :class=>"btn btn-primary btn-signup", disable_with: "Signing in..." %>
			  	</div>
				<% end %>

				<div class="align-center">
				<%= render "devise/shared/links" %>
				</div>
			<hr>
				<p class="small-note">Thanks for signing up with Accruto. You will be able to setup and get free email alerts for the jobs most relevant to you. Good luck hunting!</p>
			</div>
		</div>
</div>
