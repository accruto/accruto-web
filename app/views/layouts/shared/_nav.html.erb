<div class="navigation-bar">
  <div class="container">
    <div class="row-fluid">
      <div class="span3">
        <a href="<%= root_path %>"><%= image_tag "/assets/navbar-logo.png", :class => "small-logo" %></a>
        <span id="navbar-button" class="navbar-button hidden-desktop hidden-tablet"><i class="icon-reorder"></i></span>
      </div>
      <div class="span9">
        <ul class="navbar-links hidden-phone">
          <li><a href="<%= new_job_path %>"><span class="blue-accent">Are you an employer? </span>&nbsp;&nbsp;Post a free job ad</a></li>
          <% if current_user %>
            <li>
            	<div class="btn-group">
            	  <a class="btn btn-user dropdown-toggle" data-toggle="dropdown" href="#">
            	    <%= current_user.email %>
            	    <span class="caret"></span>
            	  </a>
            	  <ul class="dropdown-menu pull-right">
                  <li><%= link_to "Shortlisted Jobs", shortlist_jobs_path %></li>
            	  	<li><%= link_to "Applied Jobs", users_applications_path %></li>
            	    <li><%= link_to "Settings", edit_user_registration_path %></li>
            	    <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            	  </ul>
            	</div>
            </li>

          <% else %>
            <li><a href="<%= new_user_session_path %>">Log In</a></li>
            <li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="visible-phone">
  <ul id="navbar-menu" class="navbar-list">
    <a href="<%= root_path %>">
      <li><i class="icon-search"></i>&nbsp;&nbsp;Search Another Job</li>
    </a>
    <a href="#">
      <li><i class="icon-star"></i>&nbsp;&nbsp;My Favourites</li>
    </a>
    <a href="<%= new_job_path %>">
      <li><i class="icon-pencil"></i>&nbsp;&nbsp;Post a Free Job Ad</li>
    </a>
    <% if current_user %>
      <li><%= link_to current_user.email, edit_user_registration_path %></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li><a href="<%= new_user_session_path %>">Log In</a></li>
      <li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
    <% end %>
  </ul>
</div>