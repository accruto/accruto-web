  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 id="alertLabel" class="favourite-modal">
      <%= alert_title if defined?(alert_title) %>
    </h4>
  </div>
  <div class="modal-body">
    <p><%= alert_content if defined?(alert_content) %></p>
  </div>
