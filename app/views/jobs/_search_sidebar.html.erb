<div class="search-box" xmlns="http://www.w3.org/1999/html">
		<h4 class="sidebar-title">Refine your Search</h4>
	<%= form_tag "/jobs/search", method: :get do %>
		<label class="brand-dark-blue-accent">Whats  your next job title?</label>
		<%= text_field_tag :job_title, params[:job_title], placeholder: 'Job Title' %>
		<label class="brand-dark-blue-accent">Where?</label>
		<%= text_field_tag :address, params[:address], placeholder: 'City or State' %>
		<label class="brand-dark-blue-accent">Date posted:</label>
		<%= select_tag :days, options_for_select(date_filter_options, params[:days]) %>
		<label class="brand-dark-blue-accent">Sort by:</label>
		<%= select_tag :sort, options_for_select(sort_filter_options, params[:sort]) %>
		<div class="hidden">
			<label class="brand-dark-blue-accent">What type of commitment</label>
			<div class="radio-container">
				<input type="radio" />&nbsp;&nbsp;&nbsp;Full-time <input type="radio" />&nbsp;&nbsp;&nbsp;Casual <br>
				<input type="radio" />&nbsp;&nbsp;&nbsp;Part-time <input type="radio" />&nbsp;&nbsp;&nbsp;Contract
			</div>
			<br>
		</div>
		<%= submit_tag "Search", class: 'btn btn-primary btn-large' %>
	<% end %>
</div>

<div class="recent-searches">
	<p><span class="sidebar-title">Recent Searches</span></p>
	<ul id="searches-sidebar-list" class="recent-list">
    <% if @recent_searches.empty? %>
      <%= render 'job_search_empty', show: true %>
    <% else %>
      <% @recent_searches.each do |recent_search| %>
        <li>
        	<div class="row-fluid">
        		<div class="span11">
        			<a href="<%= build_search_params(recent_search) %>">
        			  <span class="recent-role"><%= recent_search.job_title.try(:capitalize) %></span> <br>in
        			  <% if recent_search.address.present? %>
        			    <span class="recent-role"><%= recent_search.address.try(:capitalize) %></span>
        			  <% else %>
        			    <span class="recent-role">Anywhere</span>
        			  <% end %>
        			</a>
        		</div>
        		<div class="span1">
        			<a href="#"><span class=""><i class="icon-bell-alt"></i></span></a>
        		</div>
        	</div>
        </li>
      <% end %>
    <% end %>
	</ul>
	<p id="remove-all-searches-wrapper" class="action align-right <%= 'hide' if @recent_searches.empty? %>">
    <%= link_to 'Clear Searches', remove_all_searches_jobs_path, id: 'remove-all-searches' %>
  </p>
</div>

<div class="favourite-roles">
	<p><span class="sidebar-title">Favourited Jobs</span></p>
	<ul id="favourites-sidebar-list" class="recent-list">
    <% unless favourite_jobs.empty? %>
      <%= render 'job_favourite_empty', show: false %>
      <% favourite_jobs.each do |favourite_job| %>
        <%= render 'job_favourite_item', job: favourite_job %>
      <% end if defined?(favourite_jobs) %>
    <% else %>
      <%= render 'job_favourite_empty', show: true %>
    <% end %>
  </ul>

  <p id="remove-all-favourites-wrapper" class="action align-right <%= 'hide' if favourite_jobs.empty? %>">
    <%= link_to 'Clear Favourites', remove_all_favourites_jobs_path, id: 'remove-all-favourites' %>
  </p>

</div>

<%= render 'shared/modal_alert', alert_title: 'Alert', alert_content: 'Are you sure want to clear recent searches?', key: 'remove-all-searches' %>
<%= render 'shared/modal_alert', alert_title: 'Alert', alert_content: 'Are you sure want to clear favourites?', key: 'remove-all-favourites' %>