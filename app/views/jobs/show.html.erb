<div class="container detail-show">
	<div class="row-fluid">
		<div class="span4">
			<%= render 'search_sidebar' %>
		</div>
		<div class="span8">
			<a href="javascript:history.back()"><span class="job-detail-back">Back to search results</span></a>
			<hr>
			<div class="row-fluid">
				<div class="span7 detail-info">
					<h3 class="role-title"><%= @job.title %></h3>
					<p>
						<span class="label label-full-time"><%= @job.job_type %></span>
						<%= @job.company.name %> - <%= @job.address.city %>, <%=  @job.address.postcode %> <%= @job.address.state %>
					</p>
					<small class="posted-date">Posted <%= distance_of_time_in_words(@job.posted_at, DateTime.now) %> ago on <%= @job.source %>.com</small>
				</div>
				<div class="span4">
					<div class="result-actions align-right">
						<a href="#" class="btn btn-primary">APPLY</a>
						<a href="#" class="btn btn-inverse"><i class="icon-star"></i></a>
					</div>
				</div>
			</div>
			<hr>
			<div class="row-fluid detail-description">
				<div class="span12">
					<p><%= sanitize @job.description %></p>
				</div>
			</div>
		</div>
	</div>
</div>