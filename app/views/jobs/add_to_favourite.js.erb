<% if @set_selected %>
  if ($('#job-list-sidebar-empty').is(":visible")) {
    $('#job-list-sidebar-empty').hide();
    $('#remove-all-favourites-wrapper').show();
  }
  $('#favourites-sidebar-list').append('<%= j(render "shared/job_favourite_item", job: @job ) %>');
<% else %>
  $('#job-list-sidebar-<%= @job_id %>').remove();

  if ($('#favourites-sidebar-list').children().length <= 1) {
    $('#job-list-sidebar-empty').show();
    $('#remove-all-favourites-wrapper').hide();
  }
<% end %>