<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :address_id %>
    <%= f.input :posted_at %>
    <%= f.input :expires_at %>
    <%= f.input :type %>
    <%= f.input :company_id %>
    <%= f.input :external_link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
