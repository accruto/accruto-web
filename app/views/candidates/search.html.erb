<div class="container">
  <div class="row">
    <div class="col-md-3 hidden-phone">
      <div class="candidates-search-left-sidebar">
        <%= render 'shared/candidate_search_sidebar', favourite_jobs: @favourite_jobs %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="candidates-search-content">
        <h4 class="result-sentence">There are <span class="result-number"><%= @candidates.count %></span> <%= params[:search][:job_title] %> candidates in <%= params[:search][:address].present? ? params[:search][:address] : "Australia" %>
        </span>
        </h4>
        <div class="candidates-search-pagination">
          <%= will_paginate @candidates %>
        </div>
        <ul class="candidate-list">
          <% @candidates.each do |candidate| %>
            <%= render 'candidate_preview', candidate: candidate %>
            <%= render 'candidate_flipped', candidate: candidate %>
          <% end %>
        </ul>
        <div class="candidates-search-pagination">
          <%= will_paginate @candidates %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="sidebar-panel candidate-shortlist" data-spy="affix">
        <div class="header">
          <i class="icon-ok"></i>
          <span class="header-title">Candidate Shortlist</span>
        </div>
        <ul class="content">
          <li>No shortlisted candidates</li>
        </ul>
      </div>
    </div>
  </div>
</div>