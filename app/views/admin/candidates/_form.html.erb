<%= simple_form_for [:admin, @candidate] do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :first_name %>
    </div>
    <div class="col-md-4">
      <%= f.input :last_name %>
    </div>
    <div class="col-md-4">
      <%= f.input :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :phone %>
    </div>
  </div>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
