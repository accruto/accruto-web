<div class="container">
  <div class="page-header">
    <%= link_to new_admin_job_path, :class => 'btn btn-primary' do %>
      <i class="icon-plus icon-white"></i>
      New Job
    <% end %>
    <h1>Listing Jobs</h1>
  </div>

  <table class="table table-bordered table-striped datatable">
    <thead>
      <tr>
        <th>Title</th>
        <th>Address</th>
        <th>Posted at</th>
        <th>Expires at</th>
        <th>Job Type</th>
        <th>Company</th>
        <th>External job id</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
  <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.address.city %> <%= job.address.postcode %>, <%= job.address.state %></td>
        <td><%= job.posted_at %></td>
        <td><%= job.expires_at %></td>
        <td><%= job.job_type %></td>
        <td><%= job.company.name %></td>
        <td><%= job.external_job_id %></td>
        <td><%= link_to 'Edit', edit_admin_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
    </tbody>
</table></div>
