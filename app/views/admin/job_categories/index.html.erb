<div class="container">
  <div class="page-header">
    <%= link_to new_admin_job_category_path, :class => 'btn btn-primary' do %>
      <i class="icon-plus icon-white"></i>
      New Job Category
    <% end %>
    <h1>Listing Job Categories</h1>
  </div>

  <table class="table table-bordered table-striped datatable">
    <thead>
      <tr>
        <th>Name</th>
        <th>External Category Id</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.external_category_id %></td>
        <td><%= link_to 'Edit', edit_admin_job_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
    </tbody>
</table></div>
